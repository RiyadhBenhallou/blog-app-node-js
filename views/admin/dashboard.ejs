<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("../partials/search.ejs") %>
  <div class="container">
    <%- include("../partials/header_admin.ejs") %>
  <main class="main">
    <div class="admin-title">
      <h2>Posts</h2>
      <a href="/add-post" class="button">+ Add New</a>
    </div>

    <ul class="admin-posts">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <%= post.title %> &nearr;
          </a>
          <div class="admin-post-controls">

            <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

            <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" class="btn">
            </form>

          </div>
        </li>
     <% }) %>
    </ul>
    
  </main>
    <%- include("../partials/footer.ejs") %>
  </div>
    <script src="js/script.js"></script>
</body>
</html>