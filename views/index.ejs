<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("partials/search.ejs") %>
  <div class="container">
    <%- include("partials/header.ejs") %>
  <main class="main">
    <div class="author">
      <h1 class="author_heading">This is Riyadh!</h1>
      <p class="author_body">Fullstack Web Developer</p>
    </div>

    <img src="/img/formula1.jpg" alt="smth" class="hero_image" width="981" height="528">

    <section class="articles">
      <h2 class="articles_heading">Latest posts</h2>

      <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
          </a>
        </li>
        <% }) %>
      </ul>
      <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
      <%}%>
      
    </section>
    
  </main>
    <%- include("partials/footer.ejs") %>
  </div>
    <script src="js/script.js"></script>
</body>
</html>